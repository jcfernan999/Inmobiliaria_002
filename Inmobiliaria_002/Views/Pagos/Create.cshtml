@model Inmobiliaria_002.Models.Pago

@{
    ViewData["Title"] = "Create";
}

<h1>Pago</h1>

<h4>Nuevo Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Alquileres</label>
                <select class="form-control" name="AlquilerId">
                    @foreach (var item in (IList<Alquiler>)ViewBag.Alquileres)
                    {
                        <option value="@item.AlquilerId">@(item.AlquilerId + " " + item.Descripcion)</option>
                    }
                </select>
                <span asp-validation-for="AlquilerId" class="text-danger"></span>
            </div>

            @*<div class="form-group">
            <label asp-for="AlquilerId" class="control-label"></label>
            <select asp-for="AlquilerId" class ="form-control" asp-items="ViewBag.AlquilerId"></select>
        </div>*@
            <div class="form-group">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
